{
  "permissions": {
    "allow": [
      "Bash(python3 -m pytest -x)",
      "Bash(mv:*)",
      "Bash(uv run pytest tests/test_cli.py -v)",
      "Bash(uv run pytest tests/test_markdown_spec.py -v)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/session_context_loader.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/session_context_loader.py"
          }
        ]
      }
    ]
  }
}
